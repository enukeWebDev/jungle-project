<%# Render the table for Categories Page  %>

<section class="admin-categories-index">

  <header class="page-header">
    <h3>Admin &raquo; All Categories</h3>
  </header>

  <div class="well">
    <%= link_to "+ New Category", [:new, :admin, :category], class: "btn btn-info" %>
  </div>

  <div class="panel panel-default categories">

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Category</th>
          <th>Products</th>
        </tr>
      </thead>
      <tbody>
        <%= render @categories %>
      </tbody>
    </table>
  </div>

</section>